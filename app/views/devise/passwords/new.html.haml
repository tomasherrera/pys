.container  
  %h2 Olvidaste tu contrase√±a?
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = devise_error_messages!
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, size: 45
    .actions
      = f.submit "Enviar instrucciones a mi correo", class: "btn btn-success"
  = render "devise/shared/links"
